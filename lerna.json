{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": ["packages/*"],
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": ["master", "next"],
      "preid": "next",
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "yes": true
    }
  }
}
